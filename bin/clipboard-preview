#!/usr/bin/env bash

image_target_found=$(xclip -o -selection clipboard -t TARGETS | grep image)

echo $image_target_found
if [ -n "$image_target_found" ]; then
    file=/tmp/clipboard-preview
    xclip -o -selection clipboard > $file
    notify-send -i $file "Clipboard"
else
    notify-send Clipboard: $(xclip -o -selection clipboard)
fi
