set mouse=
set colorcolumn=80,120
set relativenumber
set nofoldenable
set title
let g:DisableAutoPHPFolding = 1
let g:neocomplete#enable_at_startup = 0
let vim_markdown_preview_github = 1
let g:PreviewBrowsers = 'google-chrome,firefox,safari,chromium-browser,epiphany,opera'
let g:syntastic_php_phpcs_args = '--standard=PSR2'
let g:ctrlp_cmd = 'Files'
set rtp+=~/3rdrepos/fzf


if !has('gui_running')
    set nocursorline
endif

let g:vdebug_options = {"break_on_open": 0}
let g:vim_markdown_conceal = 0
let test#strategy = "vimux"
let g:phpactorPhpBin = '/usr/bin/php'

unmap <C-e>
nnoremap <leader>b :CtrlPBuffer<CR>
nnoremap 1<Backspace> :set background=dark<CR>
nnoremap 2<Backspace> :set background=light<CR>

" - Move lines
nnoremap <C-J> :m .+1<CR>==
nnoremap <C-K> :m .-2<CR>==
inoremap <C-J> <Esc>:m .+1<CR>==gi
inoremap <C-K> <Esc>:m .-2<CR>==gi
vnoremap <C-J> :m '>+1<CR>gv=gv
vnoremap <C-K> :m '<-2<CR>gv=gv

" - Testing goodness!
nnoremap <leader>ts :TestSuite<CR>
nnoremap <leader>tf :TestFile<CR>
nnoremap <leader>tl :TestLast<CR>
nnoremap <leader>tn :TestNearest<CR>

